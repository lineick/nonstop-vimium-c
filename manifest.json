{
  "manifest_version": 2,
  "name": "Nonstop Vimium C",
  "version": "0.0.3",
  "description": "Makes Vimium C work in PDF view on Firefox",
  "browser_specific_settings": {
    "gecko": {
      "id": "nonstop-vimium-c@example.com",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "web_accessible_resources": [
    "pdf/lib/*",
    "pdf/viewer.js",
    "pdf/viewer.css",
    "pdf/vimium-bridge.js",
    "pdf/viewer-page.html",
    "pdf/viewer-page-init.js",
    "icons/*"
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  }
}
